---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'small' | 'medium' | 'large';
  disabled?: boolean;
  className?: string;
  href?: string;
}

const { variant = 'primary', size = 'medium', disabled = false, className = '', href } = Astro.props;

const classes = ['button', variant, size, className].filter(Boolean).join(' ');

const Component = href ? 'a' : 'button';
---

<Component
  class={classes}
  disabled={disabled && !href}
  href={href}
  target={href ? '_blank' : undefined}
  rel={href ? 'noopener noreferrer' : undefined}
>
  <slot />
</Component>

<style>
  .button {
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.2s ease-in-out;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    font-family: inherit;
  }

  .button:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  /* Variants */
  .primary {
    background-color: #6366f1;
    color: #ffffff;
    border: 1px solid transparent;
  }

  .primary:not(:disabled):hover {
    background-color: #4f46e5;
  }

  :global(.dark) .primary {
    background-color: #8b5cf6;
    color: #ffffff;
  }

  :global(.dark) .primary:not(:disabled):hover {
    background-color: #7c3aed;
  }

  .secondary {
    background-color: rgba(255, 255, 255, 0.1);
    color: #6366f1;
    border: 1px solid #6366f1;
  }

  .secondary:not(:disabled):hover {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: #4f46e5;
  }

  :global(.dark) .secondary {
    background-color: rgba(255, 255, 255, 0.05);
    color: #ffffff;
    border: 1px solid #8b5cf6;
  }

  :global(.dark) .secondary:not(:disabled):hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: #7c3aed;
  }

  .outline {
    background-color: transparent;
    color: #6366f1;
    border: 1px solid #6366f1;
  }

  .outline:not(:disabled):hover {
    background-color: #6366f1;
    color: #ffffff;
  }

  :global(.dark) .outline {
    color: #8b5cf6;
    border-color: #8b5cf6;
  }

  :global(.dark) .outline:not(:disabled):hover {
    background-color: #8b5cf6;
    color: #000000;
  }

  /* Sizes */
  .small {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }

  .medium {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }

  .large {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }
</style>
