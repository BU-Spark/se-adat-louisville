---
const {
  title = "Louisville Anti-Displacement Assessment Tool (ADAT)",
  description = "Learn about Louisville's Anti-Displacement Assessment Tool (ADAT) - a free public platform to assess housing development impact on communities and prevent displacement.",
  keywords = "Louisville housing, displacement assessment, ADAT tool, affordable housing, housing policy, community development, gentrification prevention",
  ogType = "website",
  ogTitle = "Louisville Anti-Displacement Assessment Tool (ADAT) | Housing Policy Resource",
  ogDescription = description,
} = Astro.props;
---

<html lang="en">
  <head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />

  <!-- Open Graph -->
  <meta property="og:type" content={ogType} />
  <meta property="og:title" content={ogTitle} />
  <meta property="og:description" content={ogDescription} />

  <!-- Global CSS -->
  <link rel="stylesheet" href="/styles.css" />
</head>

  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
