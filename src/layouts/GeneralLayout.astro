---
import '../styles/global.css';

import NavBar from '../components/NavBar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="An Astro & TypeScript template designed for rapid development and learning industry best practices."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/title_house.svg" />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <main>
      <slot />
    </main>
  </body>
</html>
