    <script>
        // State dropdown functionality
        const stateInput = document.getElementById('state');
        const stateDropdown = document.getElementById('stateDropdown');
        const stateOptions = document.querySelectorAll('.state-option');
        let currentFocusIndex = -1;
        
        if (stateInput && stateDropdown) {
            stateInput.addEventListener('click', function() {
                stateDropdown.classList.toggle('show');
                if (stateDropdown.classList.contains('show')) {
                    currentFocusIndex = -1;
                }
            });
            
            stateInput.addEventListener('keydown', function(e) {
                if (!stateDropdown.classList.contains('show')) {
                    if (e.key === 'ArrowDown' || e.key === 'Enter') {
                        e.preventDefault();
                        stateDropdown.classList.add('show');
                        currentFocusIndex = 0;
                        focusOption(0);
                    }
                    return;
                }
                
                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    currentFocusIndex = Math.min(currentFocusIndex + 1, stateOptions.length - 1);
                    focusOption(currentFocusIndex);
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    currentFocusIndex = Math.max(currentFocusIndex - 1, 0);
                    focusOption(currentFocusIndex);
                } else if (e.key === 'Enter') {
                    e.preventDefault();
                    if (currentFocusIndex >= 0) {
                        selectOption(currentFocusIndex);
                    }
                } else if (e.key === 'Escape') {
                    e.preventDefault();
                    stateDropdown.classList.remove('show');
                    stateInput.focus();
                }
            });
            
            stateOptions.forEach((option, index) => {
                option.addEventListener('click', function() {
                    stateInput.value = this.getAttribute('data-value');
                    stateDropdown.classList.remove('show');
                    stateInput.focus();
                });
                
                option.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        selectOption(index);
                    } else if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        currentFocusIndex = Math.min(index + 1, stateOptions.length - 1);
                        focusOption(currentFocusIndex);
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        currentFocusIndex = Math.max(index - 1, 0);
                        focusOption(currentFocusIndex);
                    } else if (e.key === 'Escape') {
                        e.preventDefault();
                        stateDropdown.classList.remove('show');
                        stateInput.focus();
                    }
                });
            });
            
            function focusOption(index) {
                if (index >= 0 && index < stateOptions.length) {
                    stateOptions[index].focus();
                    stateOptions[index].scrollIntoView({ block: 'nearest', behavior: 'smooth' });
                }
            }
            
            function selectOption(index) {
                if (index >= 0 && index < stateOptions.length) {
                    stateInput.value = stateOptions[index].getAttribute('data-value');
                    stateDropdown.classList.remove('show');
                    stateInput.focus();
                }
            }
            
            document.addEventListener('click', function(event) {
                if (!event.target.closest('.state-select')) {
                    stateDropdown.classList.remove('show');
                }
            });
        }
        
        // Logo upload functionality
        const uploadBtn = document.querySelector('.upload-btn');
        const logoInput = document.getElementById('logoUpload');
        const logoPreview = document.getElementById('logoPreview');
        
        if (uploadBtn && logoInput) {
            uploadBtn.addEventListener('click', () => logoInput.click());
            
            logoInput.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file && file.type.match('image.*')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        logoPreview.innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: cover;">`;
                    };
                    reader.readAsDataURL(file);
                }
            });
        }
        
        // Color picker functionality
        function isHex(color) {
            return /^#(?:[0-9A-F]{3}){1,2}$/i.test(color);
        }
        
        function normalizeHex(h) {
            if (/^#[0-9A-F]{3}$/i.test(h)) {
                return '#' + h.slice(1).split('').map(c => c + c).join('').toUpperCase();
            }
            return h.toUpperCase();
        }

        document.querySelectorAll('.color-picker').forEach(picker => {
            const swatch = picker.querySelector('.color-swatch');
            const text = picker.querySelector('input[type="text"]');

            if (text && isHex(text.value)) {
                const hex = normalizeHex(text.value.trim());
                swatch.style.backgroundColor = hex;
                text.value = hex;
            }

            const hidden = document.createElement('input');
            hidden.type = 'color';
            hidden.style.display = 'none';
            hidden.setAttribute('aria-hidden', 'true');
            hidden.value = isHex(text.value) ? normalizeHex(text.value) : '#000000';
            picker.appendChild(hidden);

            text.addEventListener('input', e => {
                const val = e.target.value.trim();
                if (isHex(val)) {
                    const hex = normalizeHex(val);
                    swatch.style.backgroundColor = hex;
                    e.target.value = hex;
                    if (hidden) hidden.value = hex;
                }
            });

            // Click to open color picker
            swatch.addEventListener('click', () => hidden.click());
            
            // Keyboard accessibility for color swatch
            swatch.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    hidden.click();
                }
            });
            
            // Update when color picker changes
            hidden.addEventListener('input', e => {
                const hex = e.target.value.toUpperCase();
                swatch.style.backgroundColor = hex;
                text.value = hex;
            });
        });
    </script>
