        }
        
        .page-title p {
            color: #4b5563;
        }
        
        .tabs {
            display: flex;
            gap: 0;
            background: #f3f4f6;
            border-radius: 0.5rem;
            padding: 0.25rem;
            margin-bottom: 2rem;
        }
        
