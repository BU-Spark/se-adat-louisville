---
import Layout from '../layouts/GeneralLayout.astro';
import background from '../../public/assets/landing/background.png';
import titleHouse from '../../public/assets/landing/title-house.png';
---

<Layout title="Anti Displacement Assessment Tool Landing Page">
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <title>Anti-Displacement Assessment Tool</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    </head>
    <body class="bg-blue-100" style="font-family: 'Instrument Sans', sans-serif;">
      <main class="relative min-h-screen">
        <!-- Background Image -->
        <div class="fixed inset-0 z-0">
          <img
            src={background.src}
            alt="Construction site"
            class="w-full h-full object-cover object-top"
            style={{
              position: 'absolute',
              transform: 'scale(1.5)',
              transformOrigin: 'top left',
              filter: 'saturate(1.8) contrast(1.05)',
            }}
          />
          <div class="absolute inset-0 bg-blue-500 bg-opacity-0"></div>
        </div>

        <!-- Content -->
        <div class="relative z-10 max-w-5xl pl-4 sm:pl-32 pr-12 py-28 text-white">
          <!-- Title -->
          <h1
            class="display: inline-block text-7xl md:text-7xl mb-10"
            style="font-family: 'MuseoModerno', cursive; font-weight: 400;"
          >
            <span style="display: inline-block; vertical-align: bottom; height: 1em;">
              <img
                src={titleHouse.src}
                alt="A"
                style="height: 1em; width: auto; display: inline; margin-right: 0.05em; position: relative; top: -0.18em;"
              />
            </span>nti-Displacement Assessment Tool
          </h1>

          <!-- Assessment Button -->
          <a href="/assessment" class="button" style="font-size: 24px; margin-bottom: 40px; font-weight: 600;  ">
            Take Assessment
          </a>
          <div class="flex-box-background" style="max-width: 31rem; border-radius: 20px; margin-bottom: 15px; ">
            <!-- Subtitle -->
            <h2 class="text-2xl font-bold mb-3">Required by Law. Powered by Purpose.</h2>

            <!-- Description -->
            <p class="text-white text-md leading-relaxed">
              New residential developments seeking Louisville Metro support must meet the criteria set by the
              Anti-Displacement Assessment Tool (ADAT) to make sure new subsidized projects mitigate residential
              displacement for vulnerable populations and contribute to closing the affordable housing gap in
              Louisville.
            </p>

            <!-- Learn More Link -->
          </div>
          <div class="link">
            <a href="/education" class="link" style="color: #fff; font-weight: bold; ">Learn more</a>
          </div>
        </div>
      </main>
    </body>
  </html>
</Layout>
